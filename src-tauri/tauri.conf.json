{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "toast",
  "version": "0.1.0",
  "identifier": "com.vladm.toast",
  "build": {
    "beforeDevCommand": "deno task dev",
    "beforeBuildCommand": "deno task build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Control",
        "width": 800,
        "height": 600
      },
      {
        "label": "toast",
        "url": "toast.html",
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "width": 1920,
        "height": 1080,
        "x": 0,
        "y": 0,
        "resizable": false,
        "focusable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
